{
  "name": "vscode-extension",
  "displayName": "Bounty",
  "description": "Bounty VSCode Extension",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bountydotnew/bounty.new.git"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bounty-sidebar",
          "title": "Bounty",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "bounty-sidebar": [
        {
          "type": "webview",
          "id": "bounty.sidebarView",
          "name": "Bounty",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "bounty-vscode.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@bounty/api": "workspace:*",
    "@bounty/types": "workspace:*",
    "@trpc/client": "catalog:",
    "superjson": "catalog:"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "catalog:",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "catalog:",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
